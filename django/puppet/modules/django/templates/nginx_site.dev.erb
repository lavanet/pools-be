upstream django-<%= @project %> {
    server 127.0.0.1:8000 fail_timeout=60;
}

server {
    listen 80 default;
    listen 443 ssl http2;
    ssl_certificate <%= @site_path %>/localhost.crt;
    ssl_certificate_key <%= @site_path %>/localhost.key;

    client_max_body_size 512M;
    sendfile off;

    access_log <%= @site_path %>/access.log;
    error_log  <%= @site_path %>/error.log;

    location /media/ {
        alias   <%= @path %>/media/;
        expires 1d;
    }

    location /static/bundles/ {
        alias   <%= @path %>/assets/bundles/;
        expires 365d;
    }

    location /static/images/ {
        alias   <%= @path %>/assets/images/;
        expires 365d;
    }

    location /static/front/ {
        alias   <%= @path %>/apps/front/static/front/;
        expires 365d;
    }

    location /favicon.ico {
        alias   <%= @path %>/static/favicon.ico;
        expires 365d;
    }

    location / {
        proxy_pass         http://django-<%= @project %>;
        proxy_set_header   Host                 $http_host;
        proxy_set_header   X-Real-IP            $remote_addr;
        proxy_set_header   X-Forwarded-For      $proxy_add_x_forwarded_for;
        proxy_set_header   X-Forwarded-Proto    $scheme;
    }

    gzip on;
    gzip_min_length 500;
    gzip_proxied any;
    gzip_comp_level 2;
    gzip_http_version 1.0;
    gzip_buffers 16 8k;
    gzip_types text/plain text/css application/x-javascript text/xml application/xml application/xml+rss text/javascript;
    gzip_disable "MSIE [1-6].(?!.*SV1)";
    gzip_vary on;
}
